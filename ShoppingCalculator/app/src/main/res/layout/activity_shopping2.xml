<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shopping2Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".01">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Number of items(s): "
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/number_of_items"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="-85dp"
            android:textSize="15dp"
            android:background="#00000000"
            android:enabled="false"





            />
    </LinearLayout>

    //Row 1
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".06">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Item name "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="-100dp"
            android:hint="Enter name"
            android:textSize="15dp"



            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".14">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Item price "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:inputType="numberDecimal"

            android:hint="0.00"
            android:textSize="15dp"

            />
    </LinearLayout>

    //Row 3 subtotal
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".21">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Item quantity "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/quantity"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-100dp"
            android:inputType="numberDecimal"

            android:hint="0"
            android:textSize="15dp"

            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>